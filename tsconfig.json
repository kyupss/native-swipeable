{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    // Type definition settings.
    "lib": [ "es2017" ],
    "skipLibCheck": true,
    // TSLib settings.
    "importHelpers": true,
    // Module resolution settings.
    "module": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "rootDir": "./src",
    // Generated type definitions settings.
    "declaration": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts"
  ]
}